<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/espacio_L">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRegistroSolucionador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/espacio_ML"
                android:layout_marginBottom="@dimen/espacio_S"
                android:text="@string/reg_cli_titulo"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/brand_azul"
                android:textSize="@dimen/font_display" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reg_sol_subtitulo"
                android:textColor="@color/txt_cuerpo"
                android:textSize="@dimen/font_body"
                android:layout_marginBottom="@dimen/espacio_XL"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reg_cli_hint_nombre"
                app:boxStrokeColor="@color/brand_azul"
                app:hintTextColor="@color/brand_azul"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="@dimen/espacio_M">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_Nombre_solucionador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_titulo"
                    android:textColorHint="@color/txt_cuerpo"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reg_cli_hint_paterno"
                app:boxStrokeColor="@color/brand_azul"
                app:hintTextColor="@color/brand_azul"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="@dimen/espacio_M">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_ApPaterno_solucionador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_titulo"
                    android:textColorHint="@color/txt_cuerpo"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reg_cli_hint_materno"
                app:boxStrokeColor="@color/brand_azul"
                app:hintTextColor="@color/brand_azul"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="@dimen/espacio_M">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_ApMaterno_solucionador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_titulo"
                    android:textColorHint="@color/txt_cuerpo"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_cli_hint_email"
                app:boxStrokeColor="@color/brand_azul"
                app:hintTextColor="@color/brand_azul"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="@dimen/espacio_M">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_Mail_solucionador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_titulo"
                    android:textColorHint="@color/txt_cuerpo"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_cli_hint_pass"
                app:endIconMode="password_toggle"
                app:boxStrokeColor="@color/brand_azul"
                app:hintTextColor="@color/brand_azul"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="@dimen/espacio_M">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_Password_solucionador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_titulo"
                    android:textColorHint="@color/txt_cuerpo"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/reg_cli_hint_confirm_pass"
                app:endIconMode="password_toggle"
                app:boxStrokeColor="@color/brand_azul"
                app:hintTextColor="@color/brand_azul"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="@dimen/espacio_XL">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_Confirmar_Password_solucionador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_titulo"
                    android:textColorHint="@color/txt_cuerpo"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegistro_solucionador"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_h_std"
                android:text="@string/reg_cli_btn_registro"
                android:textSize="@dimen/font_btn"
                android:textStyle="bold"
                app:backgroundTint="@color/brand_azul"
                app:cornerRadius="@dimen/btn_radio_rect"
                android:layout_marginBottom="@dimen/espacio_ML"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>