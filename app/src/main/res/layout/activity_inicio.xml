<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:padding="@dimen/espacio_L">

    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="0dp"
        android:layout_height="@dimen/img_header_h"
        android:src="@drawable/ic_fixnow"
        android:scaleType="fitCenter"
        android:layout_marginTop="@dimen/espacio_XXL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/espacio_L"
        android:text="@string/inicio_titulo_brand"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/brand_azul"
        android:textSize="@dimen/font_display_xl"
        android:letterSpacing="-0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHeader" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/espacio_S"
        android:text="@string/inicio_slogan"
        android:textColor="@color/txt_cuerpo"
        android:textSize="@dimen/font_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/espacio_XXL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Cliente"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_h_tall"
            android:text="@string/inicio_btn_cliente"
            android:textSize="@dimen/font_btn_large"
            android:textStyle="bold"
            android:onClick="irInicioCliente"
            android:textColor="@color/white"
            app:backgroundTint="@color/brand_azul"
            app:cornerRadius="@dimen/card_radio_small"
            app:elevation="@dimen/btn_elev"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/espacio_M" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Solucionador"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_h_tall"
            android:text="@string/inicio_btn_solucionador"
            android:textSize="@dimen/font_btn_large"
            android:textStyle="bold"
            android:onClick="irInicioSolucionador"
            android:textColor="@color/brand_azul"
            app:strokeColor="@color/brand_azul"
            app:strokeWidth="@dimen/btn_stroke_thick"
            app:backgroundTint="@color/white"
            app:cornerRadius="@dimen/card_radio_small"
            app:elevation="0dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>