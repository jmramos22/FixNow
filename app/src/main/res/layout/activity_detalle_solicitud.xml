<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">

    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_h_small"
        android:background="@color/brand_azul"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/solicitud_titulo"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:textSize="@dimen/font_h2"
        android:layout_marginTop="@dimen/espacio_L"
        android:layout_marginStart="@dimen/espacio_L"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardInfoIncidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/espacio_M"
        android:layout_marginTop="@dimen/espacio_M"
        app:cardCornerRadius="@dimen/card_radio"
        app:cardElevation="@dimen/card_elev"
        app:cardBackgroundColor="@color/bg_card"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/icon_XS">

            <TextView
                android:id="@+id/titleIncidencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/oferta_titulo_ejemplo"
                android:textSize="@dimen/font_h3"
                android:textStyle="bold"
                android:textColor="@color/txt_titulo"
                android:layout_marginBottom="@dimen/espacio_S"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/espacio_M">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEstadoBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/tag_radio"
                    app:cardBackgroundColor="@color/bg_naranja_claro"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="@dimen/espacio_S">

                    <TextView
                        android:id="@+id/tvEstadoBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tag_estado_label"
                        android:textColor="@color/naranja_texto"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_tag"
                        android:paddingHorizontal="@dimen/oferta_pad_tag_h"
                        android:paddingVertical="@dimen/oferta_pad_tag_v"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTipoBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/tag_radio"
                    app:cardBackgroundColor="@color/bg_azul_claro"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tvTipoBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/orden_label_ubicacion"
                        android:textColor="@color/brand_azul"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_tag"
                        android:paddingHorizontal="@dimen/oferta_pad_tag_h"
                        android:paddingVertical="@dimen/oferta_pad_tag_v"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_divider"
                android:layout_marginBottom="@dimen/espacio_S"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/solicitud_label_desc"
                android:textSize="@dimen/font_tag"
                android:textColor="@color/txt_hint"
                android:layout_marginBottom="@dimen/espacio_XS"/>

            <TextView
                android:id="@+id/descripcionIncidencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/oferta_desc_ejemplo"
                android:textSize="@dimen/font_body"
                android:textColor="@color/txt_detalle"
                android:layout_marginBottom="@dimen/espacio_M"
                android:lineSpacingExtra="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/icon_XS"
                    android:layout_height="@dimen/icon_XS"
                    android:src="@android:drawable/ic_dialog_map"
                    app:tint="@color/brand_azul"
                    android:layout_marginEnd="@dimen/espacio_S"/>

                <TextView
                    android:id="@+id/tvDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/proceso_direccion"
                    android:textSize="@dimen/font_caption"
                    android:textColor="@color/txt_cuerpo"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvLabelOfertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/solicitud_label_propuestas"
        android:textStyle="bold"
        android:textSize="@dimen/font_btn"
        android:textColor="@color/brand_azul"
        android:layout_marginTop="@dimen/espacio_L"
        android:layout_marginStart="@dimen/icon_XS"
        app:layout_constraintTop_toBottomOf="@+id/cardInfoIncidencia"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOfertas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/espacio_S"
        android:paddingHorizontal="@dimen/espacio_M"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelOfertas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_oferta"/>

</androidx.constraintlayout.widget.ConstraintLayout>