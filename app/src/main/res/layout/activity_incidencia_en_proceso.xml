<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">

    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_h_std"
        android:background="@color/brand_azul"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proceso_titulo_header"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:textSize="@dimen/font_h2"
        android:layout_marginTop="@dimen/espacio_L"
        android:layout_marginStart="@dimen/espacio_L"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProceso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/espacio_M"
        android:layout_marginTop="@dimen/espacio_L"
        app:cardCornerRadius="@dimen/card_radio"
        app:cardElevation="@dimen/card_elev"
        app:cardBackgroundColor="@color/bg_card"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/espacio_L">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/espacio_S">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/tag_radio"
                    app:cardBackgroundColor="@color/bg_naranja_claro"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="@dimen/espacio_S">
                    <TextView
                        android:id="@+id/tvEstadoProceso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/espacio_S"
                        android:paddingVertical="6dp"
                        android:text="@string/tag_proceso"
                        android:textColor="@color/naranja_texto"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_tag"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/tag_radio"
                    app:cardBackgroundColor="@color/bg_azul_claro"
                    app:cardElevation="0dp">
                    <TextView
                        android:id="@+id/tvTipoProceso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/espacio_S"
                        android:paddingVertical="6dp"
                        android:text="@string/tag_domicilio"
                        android:textColor="@color/brand_azul"
                        android:textSize="@dimen/font_tag"
                        android:textStyle="bold"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTituloProceso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/oferta_titulo_ejemplo"
                android:textColor="@color/txt_titulo"
                android:textSize="@dimen/font_h1"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/espacio_S" />

            <TextView
                android:id="@+id/tvDescProceso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/oferta_desc_ejemplo"
                android:textColor="@color/txt_cuerpo"
                android:textSize="@dimen/font_body"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="@dimen/espacio_M" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_divider"
                android:layout_marginBottom="@dimen/espacio_M"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_XS"
                    android:layout_height="@dimen/icon_XS"
                    android:src="@android:drawable/ic_dialog_map"
                    app:tint="@color/brand_azul"
                    android:layout_marginEnd="@dimen/espacio_S"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/tvDireccionProceso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/proceso_direccion"
                    android:textColor="@color/txt_detalle"
                    android:textSize="@dimen/font_subtitulo" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proceso_label_tecnico"
        android:textStyle="bold"
        android:textColor="@color/brand_azul"
        android:layout_marginTop="@dimen/espacio_L"
        android:layout_marginStart="@dimen/espacio_L"
        app:layout_constraintTop_toBottomOf="@+id/cardProceso"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTecnico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/espacio_M"
        android:layout_marginTop="@dimen/espacio_S"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/cardProceso"
        app:layout_constraintBottom_toTopOf="@+id/btnCalificar"
        app:layout_constraintVertical_bias="0.1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/espacio_M">

            <ImageView
                android:layout_width="@dimen/icon_L"
                android:layout_height="@dimen/icon_L"
                android:src="@drawable/ic_person"
                app:tint="@color/txt_cuerpo"
                android:layout_marginEnd="@dimen/espacio_M"/>

            <TextView
                android:id="@+id/tvAtendidaPor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/proceso_placeholder_tecnico"
                android:textColor="@color/txt_titulo"
                android:textSize="@dimen/font_body"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutCalificacionHecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cardTecnico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/espacio_XL">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proceso_label_tu_calificacion"
            android:textColor="@color/txt_cuerpo"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/espacio_S"/>

        <RatingBar
            android:id="@+id/ratingBarMostrar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:progressTint="@color/brand_naranja"
            android:secondaryProgressTint="@color/transparent"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCalificar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_h_std"
        android:layout_marginHorizontal="@dimen/espacio_L"
        android:layout_marginTop="@dimen/espacio_XL"
        android:text="@string/proceso_btn_calificar"
        android:textSize="@dimen/font_btn"
        android:textStyle="bold"
        app:cornerRadius="@dimen/btn_radio"
        app:backgroundTint="@color/brand_naranja"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cardTecnico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>