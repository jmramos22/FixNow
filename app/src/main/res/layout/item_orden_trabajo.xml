<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/espacio_M"
    android:layout_marginVertical="@dimen/espacio_S"
    app:cardCornerRadius="@dimen/card_radio_small"
    app:cardElevation="@dimen/btn_elev"
    app:cardBackgroundColor="@color/bg_card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/espacio_M">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardIcon"
            android:layout_width="@dimen/icon_XL"
            android:layout_height="@dimen/icon_XL"
            app:cardCornerRadius="@dimen/radius_circle_xl"
            app:cardBackgroundColor="@color/bg_azul_claro"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/icon_S"
                android:layout_height="@dimen/icon_S"
                android:layout_gravity="center"
                android:src="@drawable/ic_fixnow"
                app:tint="@color/brand_azul"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvDescripcionOrden"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/item_orden_desc_ejemplo"
            android:textSize="@dimen/font_btn"
            android:textStyle="bold"
            android:textColor="@color/txt_titulo"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/espacio_M"
            android:layout_marginEnd="@dimen/espacio_S"
            app:layout_constraintStart_toEndOf="@+id/cardIcon"
            app:layout_constraintTop_toTopOf="@+id/cardIcon"
            app:layout_constraintEnd_toStartOf="@+id/cardStatusContainer"
            app:layout_constraintBottom_toTopOf="@+id/tvLabelGestionar"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardStatusContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/tag_radio"
            app:cardBackgroundColor="@color/bg_naranja_claro"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvEstadoOrden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/tag_proceso"
                android:textColor="@color/naranja_texto"
                android:textSize="@dimen/font_tag"
                android:textStyle="bold"
                android:paddingHorizontal="@dimen/oferta_pad_tag_h"
                android:paddingVertical="@dimen/oferta_pad_tag_v"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvLabelGestionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_gestionar_orden"
            android:textColor="@color/brand_azul"
            android:textStyle="bold"
            android:textSize="@dimen/font_tag"
            android:layout_marginTop="@dimen/espacio_S"
            android:layout_marginStart="@dimen/espacio_M"
            app:layout_constraintStart_toEndOf="@+id/cardIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvDescripcionOrden"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>