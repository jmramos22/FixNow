<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">

    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_h_std"
        android:background="@color/brand_azul"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/revisar_titulo"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:textSize="@dimen/font_h2"
        android:layout_marginTop="@dimen/espacio_L"
        android:layout_marginStart="@dimen/espacio_L"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardOferta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/espacio_L"
        android:layout_marginTop="@dimen/espacio_L"
        app:cardCornerRadius="@dimen/card_radio"
        app:cardElevation="@dimen/card_elev"
        app:cardBackgroundColor="@color/bg_card"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/espacio_XL">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/profile_l"
                android:layout_height="@dimen/profile_l"
                app:cardCornerRadius="@dimen/profile_rad_l"
                app:cardBackgroundColor="@color/bg_azul_claro"
                app:cardElevation="0dp"
                android:layout_marginBottom="@dimen/espacio_M">

                <ImageView
                    android:layout_width="@dimen/icon_L"
                    android:layout_height="@dimen/icon_L"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person"
                    app:tint="@color/brand_azul"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvNombreSolucionador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/revisar_nombre_ejemplo"
                android:textColor="@color/txt_titulo"
                android:textSize="@dimen/font_h1"
                android:textStyle="bold"
                android:gravity="center"/>

            <RatingBar
                android:id="@+id/ratingSolucionador"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/espacio_S"
                android:numStars="5"
                android:rating="4"
                android:stepSize="1"
                android:progressTint="@color/brand_naranja"
                android:secondaryProgressTint="@color/transparent"
                android:isIndicator="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_divider"
                android:layout_marginVertical="@dimen/espacio_L"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/revisar_label_mensaje"
                android:textSize="@dimen/font_tag"
                android:textColor="@color/txt_hint"
                android:layout_marginBottom="@dimen/espacio_S"
                android:gravity="start"/>

            <TextView
                android:id="@+id/tvMensajeOferta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/revisar_mensaje_ejemplo"
                android:textColor="@color/txt_detalle"
                android:textSize="@dimen/font_section"
                android:gravity="center"
                android:background="@color/bg_gris_claro"
                android:padding="@dimen/espacio_M"
                android:textStyle="italic"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/espacio_L"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAceptarOferta"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_h_std"
            android:text="@string/revisar_btn_aceptar"
            android:textSize="@dimen/font_btn"
            android:textStyle="bold"
            app:backgroundTint="@color/btn_verde"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/card_radio_small"
            android:layout_marginBottom="@dimen/espacio_SM"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRechazarOferta"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_h_std"
            android:text="@string/revisar_btn_rechazar"
            android:textSize="@dimen/font_btn"
            android:textStyle="bold"
            android:textColor="@color/btn_rojo"
            app:strokeColor="@color/btn_rojo"
            app:strokeWidth="@dimen/btn_stroke"
            app:backgroundTint="@color/white"
            app:cornerRadius="@dimen/card_radio_small"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>